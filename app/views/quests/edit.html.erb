<% content_for :title, "Editing quest" %>
<div class="min-h-screen flex flex-col items-center justify-center px-4 bg-gradient-to-b from-indigo-50 to-blue-100">
  <!-- Header -->
  <h1 class="text-4xl font-extrabold text-indigo-700 mb-12 text-center">
    Editing Quest ✏️
  </h1>
  <div class="w-full max-w-xl bg-white/70 backdrop-blur-md p-8 rounded-2xl shadow-md">
    <%= render "form", quest: @quest %>
  </div>
  <!-- Links -->
  <div class="mt-8 flex space-x-6 text-indigo-700 text-lg md:text-xl font-medium">
    <%= link_to "Back to quests", quests_path, class: "hover:text-blue-500 transition-colors" %>
  </div>
</div>
</div>
