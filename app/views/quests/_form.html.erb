<!-- Form -->
<%= form_with(model: @quest, local: true, class: "w-full max-w-xl space-y-6") do |form| %>
  <% if @quest.errors.any? %>
    <div class="text-red-600 text-lg">
      <h2 class="font-semibold mb-2"><%= pluralize(@quest.errors.count, "error") %> prohibited this quest from being saved:</h2>
      <ul class="list-disc list-inside">
        <% @quest.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- Name Field -->
  <div class="flex flex-col items-start">
    <%= form.label :name, class: "text-xl font-semibold text-indigo-700 mb-2" %>
    <%= form.text_field :name, class: "w-full px-4 py-3 border border-indigo-200 rounded-xl text-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>
  <!-- Submit Button -->
  <div class="w-full md:w-auto">
    <%= form.submit "Save Quest", class: "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-md text-lg transition-colors" %>
  </div>
<% end %>